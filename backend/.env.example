# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=your-supabase-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Application Configuration
APP_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
AUTO_LOCK_TIMEOUT=900  # Auto-lock timeout in seconds (15 minutes)

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Skip API Configuration (for ETH/USD conversion)
SKIP_API_URL=https://api.skip.build/v2/fungible/msgs_direct
SKIP_API_TIMEOUT=5

# Notification Configuration
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER=  # Format: +[country_code][number]

# Logging
LOG_LEVEL=INFO
